#!/bin/sh

#
#   $1 - json data
#   $2 - [debug]
#

### MQTT settings:
MQTT_LOGIN="login"
MQTT_PASSWORD="password"
MQTT_HOST="127.0.0.1" 
MQTT_PORT=1883
MQTT_TOPIC="smart"

export PATH="/opt/bin:/opt/sbin:/opt/usr/bin:/usr/sbin:/usr/bin:/sbin:/bin"
export LANG="en_US.UTF-8"
export LANGUAGE="en"
export HOSTNAME="$HOSTNAME"

DEBUG="$2"
DEBUG_KEY=
if [ -n "$DEBUG" ]; then
    DEBUG_KEY="--debug"
fi

MQTT=`which mosquitto_pub`
if [ $? -ne 0 ]; then
    echo " Error! MQTT Client doesn't exists..." >&2
    exit 1
fi

MQTT_MSG="`cat "$1"`"

MQTT_CMD="${MQTT} --host ${MQTT_HOST} --port ${MQTT_PORT} --username ${MQTT_LOGIN} --pw ${MQTT_PASSWORD} --topic ${MQTT_TOPIC}/${HOSTNAME} --message ${MQTT_MSG} ${DEBUG_KEY}"

$MQTT_CMD
